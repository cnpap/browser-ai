{
  "name": "root",
  "description": "Secure boilerplate for Electron app based on Vite",
  "version": "3.1.2",
  "private": true,
  "type": "module",
  "author": {
    "email": "kozackunisoft@gmail.com",
    "name": "Alex Kozack",
    "url": "https://kozack.me"
  },
  "main": "packages/entry-point.mjs",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "npm run build -ws --if-present",
    "compile": "npm run build && electron-builder build --config electron-builder.mjs",
    "test": "npx playwright test ./tests/e2e.spec.ts",
    "start:b": "concurrently -n backend,backend-api,renderer -c yellow,green,cyan \"npm:start:backend\" \"npm:start:backend-api\" \"npm:start:renderer\"",
    "start:c": "concurrently -n backend,backend-api,electron -c yellow,green,cyan \"npm:start:backend\" \"npm:start:backend-api\" \"npm:start:electron\"",
    "start:backend": "npm run start:dev --workspace backend",
    "start:backend-api": "npm run start:dev --workspace backend-api",
    "start:electron": "wait-on tcp:3000 tcp:3999 && node packages/dev-mode.js",
    "start:renderer": "wait-on tcp:3000 tcp:3999 && npm run dev --workspace @app/renderer",
    "typecheck": "npm run typecheck -ws --if-present",
    "create-renderer": "cd packages && node ./integrate-renderer/create-renderer.js",
    "integrate-renderer": "npm start --workspace @app/integrate-renderer",
    "init": "npm run create-renderer && npm run integrate-renderer && npm install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@npmcli/map-workspaces": "5.0.0",
    "@playwright/test": "1.56.1",
    "@types/node": "24.9.2",
    "concurrently": "^9.2.1",
    "create-vite": "7.1.3",
    "electron": "39.0.0",
    "electron-builder": "26.0.12",
    "glob": "11.0.3",
    "playwright": "^1.56.1",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "@app/main": "*",
    "@nestjs/platform-socket.io": "^11.1.8"
  }
}
